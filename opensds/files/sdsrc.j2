# Global
HOST_IP={{ devstack.local.host_ipv4 or '${HOST_IP:-devstack.local.host_ipv6}' }}
if [ "$HOST_IP" == "" ]; then
    die $LINENO "Could not determine host ip address. See local.conf for suggestions on setting HOST_IP."
fi

# OpenSDS configuration.
OPENSDS_VERSION={{ opensds.hotpot.release or '${OPENSDS_VERSION:-v1beta}' }}

# Multi-cloud
MULTICLOUD_VERSION={{ opensds.gelato.release or '${MULTICLOUD_VERSION:-v1}' }}

# OpenSDS service name in keystone.
OPENSDS_SERVER_NAME={{ opensds.hotpot.service or '${OPENSDS_SERVER_NAME:-opensds}' }}

# Multi-Cloud service name in keystone
MULTICLOUD_SERVER_NAME={{ opensds.gelato.service or '${MULTICLOUD_SERVER_NAME:-multicloud}' }}

# devstack keystone configuration
STACK_GIT_BASE={{ devstack.local.git_base or '${STACK_GIT_BASE:-https://git.openstack.org}' }}
STACK_USER_NAME={{ devstack.local.stack_user or '${STACK_USER_NAME:-stack}' }}
STACK_PASSWORD={{ devstack.local.os_password or '${STACK_PASSWORD:-devstack}' }}
STACK_HOME={{ devstack.dir.dest or '${STACK_HOME:-/opt/stack}' }}
DEV_STACK_DIR=$STACK_HOME/devstack
STACK_BRANCH={{ devstack.local.git_branch or '${STACK_BRANCH:-stable/rocky}' }}

GOPATH={{ golang.go_path or '${GOPATH:-$HOME/gopath}' }}
OPENSDS_DIR=${GOPATH}/src/github.com/opensds/opensds

